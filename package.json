{
  "name": "factoriolab",
  "description": "Angular-based calculator for the game Factorio",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "contributors": [
    "Doug Broad (https://github.com/dcbroad3)"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/factoriolab/factoriolab.git"
  },
  "homepage": "https://factoriolab.github.io",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:ci": "ng test --no-watch --progress=false --browsers=ChromeHeadless",
    "lint": "ng lint",
    "prettier": "prettier --check .",
    "stylelint": "stylelint **/*.css",
    "postfactorio-api": "prettier --write \"scripts/factorio.models.ts\"",
    "factorio-dump": "scripts\\factorio-dump.bat",
    "factorio-dump:mac": "scripts/factorio-dump-mac.sh",
    "factorio-dump:flatpak": "scripts/factorio-dump-flatpak.sh",
    "factorio-api": "bun scripts/factorio-api.ts",
    "sync-i18n": "bun scripts/sync-i18n.ts",
    "minify-data": "bun scripts/minify-data.ts",
    "update-color": "bun scripts/update-color.ts",
    "update-hash": "bun scripts/update-hash.ts"
  },
  "dependencies": {
    "@angular/cdk": "^21.0.2",
    "@angular/common": "^21.0.3",
    "@angular/compiler": "^21.0.3",
    "@angular/core": "^21.0.3",
    "@angular/forms": "^21.0.3",
    "@angular/platform-browser": "^21.0.3",
    "@angular/router": "^21.0.3",
    "@angular/service-worker": "^21.0.3",
    "@fortawesome/angular-fontawesome": "^4.0.0",
    "@fortawesome/free-brands-svg-icons": "^7.1.0",
    "@fortawesome/free-regular-svg-icons": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@sideway/formula": "^3.0.1",
    "class-variance-authority": "^0.7.1",
    "color-bits": "^1.1.1",
    "d3": "^7.9.0",
    "elkjs": "^0.11.0",
    "file-saver": "^2.0.5",
    "glpk-ts": "^0.0.11",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "web-worker": "^1.5.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.2",
    "@angular/cli": "^21.0.2",
    "@angular/compiler-cli": "^21.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/d3": "^7.4.3",
    "@types/file-saver": "^2.0.7",
    "@types/jasmine": "~5.1.0",
    "@types/spritesmith": "^3.4.5",
    "angular-eslint": "^21.0.1",
    "bun": "^1.3.3",
    "eslint": "^9.39.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "fast-average-color-node": "^3.1.0",
    "jasmine-core": "~5.13.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "karma-junit-reporter": "^2.0.1",
    "postcss": "^8.5.3",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "semantic-release": "^25.0.2",
    "semantic-release-discord-bot": "^1.1.0",
    "spritesmith": "^3.5.1",
    "stylelint": "^16.26.1",
    "stylelint-config-concentric-order": "^5.2.1",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "stylelint-order": "^7.0.0",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.1"
